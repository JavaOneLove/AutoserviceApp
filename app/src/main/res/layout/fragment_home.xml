<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <Button
        android:id="@+id/buttonRepairEngine"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="Button" />

    <Button
        android:id="@+id/buttonPainting"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/buttonRepairEngine"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="Button" />

    <Button
        android:id="@+id/buttonShinomontazh"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/buttonPainting"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="Button" />

    <Button
        android:id="@+id/buttonETC"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/buttonShinomontazh"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="Button" />

    <Button
        android:id="@+id/buttonRepairBody"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/buttonETC"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="Button" />
</RelativeLayout>